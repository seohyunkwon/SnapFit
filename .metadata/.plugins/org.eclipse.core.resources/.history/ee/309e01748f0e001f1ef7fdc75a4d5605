<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.fit.model.dao.VideoDao">
	<!-- 전체 비디오 가져오기 -->
	<select id="selectAll" resultType="Video">
		SELECT * FROM video
	</select>
	
	<!-- 비디오 한 개 가져오기 -->
	<select id="selectOne" parameterType="int" resultType="Video">
		SELECT *
		FROM video
		WHERE id = #{videoId}
	</select>
	
	<!-- 조회수 증가 -->
	<update id="updateViewCnt">
		UPDATE video SET 
		view_cnt = view_cnt + 1 
		WHERE id = #{videoId}
	</update>

	<!-- 검색 -->
	<select id="search" resultType="Video" parameterType="SearchCondition">
		SELECT * FROM video
		<if test="key != 'none'">
			WHERE ${key} LIKE concat('%', #{value}, '%')
		</if>
		<if test="orderBy != 'none'">
			ORDER BY ${orderBy} ${orderByDir}
		</if>
	</select>
	
	
	
</mapper>