<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.fit.model.dao.ReviewDao">
	
	<!-- 비디오에 따른 리뷰 리스트 가져오기 -->
	<select id="selectByVideoId" parameterType="int" resultType="Review">
		SELECT * FROM review
		WHERE video_id = #{videoId}
	</select>
	
	<!-- 상세 리뷰 가져오기 -->
	<select id="selectOne" parameterType="int" resultType="Review">
		SELECT * FROM review
		WHERE id = #{reviewId}
	</select>
	
	<!-- 특정 리뷰 삽입하기 -->
	<insert id="insertReview" parameterType="Review">
		INSERT INTO review (video_id, title, writer, content)
		VALUES (#{videoId}, #{title}, #{writer}, #{content})
	</insert>
	
	<!-- 특정 리뷰 수정하기 -->
	<update id="updateReview" parameterType="Review">
		UPDATE review
		SET title = #{title}, content = #{content}, reg_date = now()
		WHERE id = #{id}
	</update>
	
	<!-- 특정 리뷰 삭제하기 -->
	<delete id="deleteReview" parameterType="int">
		DELETE FROM review
		WHERE id = #{reviewId}
	</delete>

	
</mapper>