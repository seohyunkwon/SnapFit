<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.snapfit.model.dao.LikeCommentDao">
	<!-- 좋아요 생성 -->
	<insert id="insertLikeComment" parameterType="LikeComment">
		INSERT INTO like_comment (comment_no, member_no) 
		VALUES
		(#{commentNo}, #{memberNo})
	</insert>
	
	<!-- 좋아요 삭제 -->
	<delete id="deleteLikeComment" parameterType="LikeComment">
		DELETE FROM like_comment 
		WHERE 
		comment_no = #{commentNo}
		AND
		member_no = #{memberNo}
	</delete>
	
	<!-- 좋아요 여부 확인 -->
	<select id="selectLikeComment" >
		SELECT count(*) FROM like_comment 
		WHERE
		comment_no = #{commentNo}
		AND
		member_no = #{memberNo} 
	</select>
</mapper>