<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.snapfit.model.dao.ExerciseDao">

	<select id="selectExercise" parameterType="SearchCondition" resultType="Exercise">
		SELECT * FROM exercise
		<if test="key != null">
			WHERE ${key} = #{value}
		</if>
	</select>
	
	<select id="selectExerciseOrdered">
		SELECT e.* FROM exercise e 
		LEFT OUTER JOIN video v 
		ON e.no = v.exercise_no 
		GROUP BY e.no 
		ORDER BY count(e.no) DESC
	</select>
	
</mapper>